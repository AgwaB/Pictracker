<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/map_nor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mapnor"/>
        <TextView
            android:id="@+id/nation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나라, "
            android:textSize="20dp"
            android:layout_toRightOf="@id/map_nor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도시"
            android:textSize="20dp"
            android:layout_toRightOf="@id/nation_id"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/samplepic"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000년 0월"
            android:textSize="20dp"/>

<LinearLayout
    android:id="@+id/pic_menu_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/pic_menu"
    android:orientation="horizontal"
    android:visibility="gone">
        <ImageView
            android:id="@+id/pic_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settingnor"/>

        <ImageView
            android:id="@+id/pic_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settingnor"/>

        <ImageView
            android:id="@+id/pic_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settingnor"/>


</LinearLayout>
        <ImageView
            android:id="@+id/pic_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settingnor"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#태그는#여기에"
            android:textSize="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>